<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Data Keahlian</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <% if (messages.success) { %>
        <div class="alert alert-info" role="alert">
            <%= messages.success %>
        </div>
        <% } %>
        <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert">
            <%= messages.error %>
        </div>
        <% } %>

        <div class="row mt-5">
            <div class="col">
                <a href="/keahlian/create" class="btn btn-sm btn-success">Tambah Data Keahlian</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nama Keahlian</th>
                            <th scope="col">Tingkat Keahlian</th>
                            <th scope="col">Mahasiswa</th>
                            <th scope="col">Aksi</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% data.forEach(function(keahlian, index) { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= keahlian.nama_keahlian  %></td>
                            <td><%= keahlian.tingkat_keahlian  %></td>
                            <td><%= keahlian.mahasiswa_nama_depan %></td>

                            <td>
                                <a href="/keahlian/edit/<%= keahlian.id_keahlian %>"
                                    class="btn btn-sm btn-warning">Edit</a>
                            </td>
                            <td>
                                <a href="/keahlian/delete/<%= keahlian.id_keahlian %>"
                                    class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</body>

</html>